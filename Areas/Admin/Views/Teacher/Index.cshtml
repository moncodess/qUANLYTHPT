@model IEnumerable<qUANLYTHPT.Areas.Admin.Models.Teacher>

<h2>Danh Sách Giáo Viên</h2>

<table class="table">
    <thead>
        <tr>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Khoa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.FullName</td>
                <td>@teacher.Email</td>
                <td>@teacher.Department.DepartmentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId">Sửa</a> |
                    <a asp-action="Create" asp-route-id="@teacher.TeacherId">Thêm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
